<div class="container">
    <div class="row">
        <div class="col-xs-12 col-md-12 col-lg-12 text-center" id="top-bar">
            <h1>YUM BURGER!</h1>
            <img class="header-img" src="assets/img/peanut-butter-clipart-animated-8.gif">
        </div>
        <div class="col-xs-6 text-center" class="task">
            <div class="row">
                {{#each burger_data}} {{#unless this.devoured}}
                <div class="col-xs-9 text-center">
                    <pre>{{this.id}}. {{this.burger_name}}</pre>
                </div>
                <div class="col-xs-3 text-center">
                    <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                        <input type="hidden" name="burger_id" type="text" value={{this.id}}>
                        <br>
                        <button type="submit" class="btn btn-default">DEVOUR IT!</button>
                    </form>
                </div>
                {{/unless}} {{/each}}
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-4 col-lg-4"></div>
        <div id="devouredList" class="col-xs-12 col-md-4 col-lg-4 text-center enter_section">
            <form action="/burgers/create" method="POST">
                <div>
                    <input type="text" name="burger_name" class="form_control" value="" id="enter_text">
                </div>
                <button type="submit" class="btn btn-primary" id="text-enter-button">SUBMIT</button>
            </form>
            <p>Enter in a burger that you would like to DEVOUR!!!</p>
            <div class="col-xs-6 text-center" class="task">
                {{#each burger_data}} {{#if this.devoured}}
                <input id='devouredBurger' type="text" class="form-control" placeholder="{{this.id}}. {{this.burger_name}}" readonly> {{/if}} {{/each}}
            </div>
        </div>
        <div class="col-md-4 col-lg-4"></div>
    </div>
</div>